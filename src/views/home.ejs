<%- include("layouts/header"); -%>

    <section class="container">
        <h1>Home</h1>

        <% if (posts.length> 0) { %>

            <% posts.forEach(post=> { %>
                <h4>
                    <%= post.titlePost %>
                </h4>
                <p>
                    <%= post.bodyPost.substring(0,100) + " ..." %>
                        <a id="post-detail" href="/posts/<%= post.id %>">Read More</a>
                </p>
                <% }) %>

                    <% } else { %>
                        <p>No posts yet.</p>

                        <% } %>
    </section>

    <%- include("layouts/footer"); -%>